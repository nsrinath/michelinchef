<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.tamu.cs.success.srinath.michelinchef.DigitalCard"
    android:background="#ffdfe3e7"
    android:id="@+id/"
    android:textAlignment="center">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:id="@+id/imageView2"
        android:src="@drawable/cuisine_mexican"
        android:outlineProvider="bounds"
        android:layout_above="@+id/button"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Button
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:id="@+id/button"
        android:background="#ff66c7ff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:text="New Text"
        android:id="@+id/textView"
        android:background="#ffffffff"
        android:shadowColor="#000000"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="59dp" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="4 : 00"
        android:id="@+id/textView2"
        android:background="#ffb6b6b6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAlignment="gravity"
        android:textColor="#ff000000"
        android:textColorHighlight="#ff000000"
        android:textSize="40dp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:text="New Text"
        android:id="@+id/textView3"
        android:background="#ffff2e20"
        android:layout_alignEnd="@+id/textView2"
        android:layout_alignTop="@+id/textView"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1/5"
        android:id="@+id/textView4"
        android:textSize="32dp"
        android:layout_above="@+id/textView3"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
